---
import Layout from '../../layouts/Layout.astro';
import CommunityGrid from '../../components/CommunityGrid.astro';
import Navigation from '../../components/Navigation.astro';
import AnnouncementBanner from '../../components/AnnouncementBanner.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';
import galleryIndex from '../../data/gallery-index.json';

// 获取当前语言
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// 为静态生成定义路径
export async function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
    { params: { lang: 'ja' } },
    { params: { lang: 'ko' } },
  ];
}

// SEO 数据
const title = lang === 'en' 
  ? 'Wiggly Paint - Free Online Drawing Tool with Animated Wiggly Lines | Create Pixel Art & GIFs'
  : lang === 'zh'
  ? 'Wiggly Paint - 免费在线摇摆线条绘画工具 | 创作像素艺术和GIF动画'
  : lang === 'ja'
  ? 'Wiggly Paint - アニメーションぐねぐね線描画ツール | ピクセルアート＆GIF作成'
  : 'Wiggly Paint - 애니메이션 구불구불 선 그리기 도구 | 픽셀아트 & GIF 제작';

const description = lang === 'en'
  ? 'Wiggly Paint is a free online drawing tool for creating animated pixel art, comics, and doodles with unique wiggly line effects. Start drawing today - no signup required!'
  : lang === 'zh' 
  ? 'Wiggly Paint 是免费在线绘画工具，用独特的摇摆线条效果创作动画像素艺术、漫画和涂鸦。立即开始绘画 - 无需注册！'
  : lang === 'ja'
  ? 'Wiggly Paintは、ユニークなぐねぐね線効果でアニメーションピクセルアート、漫画、落書きを作成する無料オンライン描画ツールです。今すぐ描画開始 - 登録不要！'
  : 'Wiggly Paint는 독특한 구불구불 선 효과로 애니메이션 픽셀 아트, 만화, 낙서를 만드는 무료 온라인 그리기 도구입니다. 지금 그리기 시작 - 가입 불필요!';

// 精选社区作品数据
const featuredCommunityData = galleryIndex.data.items;
---

<Layout title={title} description={description} lang={lang}>
    <Navigation lang={lang} currentPage="home" />
    <AnnouncementBanner lang={lang} />

    <div class="main-container">
        <!-- Hero & Demo Section -->
        <div id="hero" class="hero-section">
            <div class="window">
                <div class="title-bar">
                    <button aria-label="Close" class="close"></button>
                    <h1 class="title">{t('hero.title')}</h1>
                    <button aria-label="Resize" class="resize"></button>
                </div>
                <div class="separator"></div>
                <div class="window-pane">
                    <div class="hero-demo-container">
                        <!-- Hero Content -->
                        <div class="hero-content">
                            <p class="hero-subtitle">{t('hero.subtitle')}</p>
                            <p>{t('hero.description')}</p>
                        </div>

                        <!-- Demo Content -->
                        <div id="demo" class="demo-content">
                            <iframe id="demo-iframe" src="/wiggly.html" class="demo-iframe"
                                title="Wiggly Paint Online Demo"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Download Section -->
        <div id="download" class="download-section">
            <div class="window">
                <div class="title-bar">
                    <h1 class="title">{t('download.title')}</h1>
                </div>
                <div class="separator"></div>
                <div class="window-pane download-content">
                    <div class="download-text">
                        <p>{t('download.description')}</p>
                    </div>
                    <div class="platform-buttons">
                        <button class="btn platform-btn ipad-highlight" onclick="window.open('https://apps.apple.com/us/app/wigglypaint/id6747758024', '_blank')">
                            <span>{t('download.ipad')}</span>
                            <small>{t('ipadBanner.subtitle')}</small>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div id="features" class="features-grid">
            <div class="window feature-window">
                <div class="title-bar">
                    <h1 class="title">{t('feature.whatIs.title')}</h1>
                </div>
                <div class="separator"></div>
                <div class="window-pane feature-content">
                    <p>{t('feature.whatIs.content')}</p>
                </div>
            </div>

            <div class="window feature-window">
                <div class="title-bar">
                    <h1 class="title">{t('feature.howTo.title')}</h1>
                </div>
                <div class="separator"></div>
                <div class="window-pane feature-content">
                    <p>{t('feature.howTo.content')}</p>
                </div>
            </div>

            <div class="window feature-window">
                <div class="title-bar">
                    <h1 class="title">{t('feature.why.title')}</h1>
                </div>
                <div class="separator"></div>
                <div class="window-pane feature-content">
                    <p>{t('feature.why.content')}</p>
                </div>
            </div>

            <div class="window feature-window">
                <div class="title-bar">
                    <h1 class="title">{t('feature.privacy.title')}</h1>
                </div>
                <div class="separator"></div>
                <div class="window-pane feature-content">
                    <p>{t('feature.privacy.content')}</p>
                </div>
            </div>
        </div>

        <!-- Community Preview Section -->
        <div id="community-preview" class="community-section">
            <div class="window">
                <div class="title-bar">
                    <h1 class="title">{t('community.heading')}</h1>
                </div>
                <div class="separator"></div>
                <div class="window-pane" style="padding: 30px;">
                    <p style="text-align: center; margin-bottom: 20px;">{t('community.subtitle')}</p>
                    <CommunityGrid items={featuredCommunityData} page={1} pageSize={3} showPagination={false} />
                    <div style="text-align: center; margin-top: 20px;">
                        <a href={getRelativeLocaleUrl(lang, 'community')} class="btn">
                            {t('community.viewAll')} →
                        </a>
                    </div>
                </div>
            </div>
        </div>


        <!-- FAQ Section -->
        <div id="faq" class="faq-section">
            <div class="window">
                <div class="title-bar">
                    <h1 class="title">{t('faq.title')}</h1>
                </div>
                <div class="separator"></div>
                <div class="window-pane" style="padding: 30px;">
                    <div class="faq-item">
                        <div class="faq-question">{t('faq.q1')}</div>
                        <div class="faq-answer">{t('faq.a1')}</div>
                    </div>

                    <div class="faq-item">
                        <div class="faq-question">{t('faq.q2')}</div>
                        <div class="faq-answer">{t('faq.a2')}</div>
                    </div>

                    <div class="faq-item">
                        <div class="faq-question">{t('faq.q3')}</div>
                        <div class="faq-answer">{t('faq.a3')}</div>
                    </div>

                    <div class="faq-item">
                        <div class="faq-question">{t('faq.q4')}</div>
                        <div class="faq-answer">{t('faq.a4')}</div>
                    </div>

                    <div class="faq-item">
                        <div class="faq-question">{t('faq.q5')}</div>
                        <div class="faq-answer">{t('faq.a5')}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer-section">
            <div class="window">
                <div class="title-bar">
                    <h1 class="title">{t('footer.title')}</h1>
                </div>
                <div class="separator"></div>
                <div class="window-pane footer-content">
                    <div class="footer-main">
                        <div class="footer-info">
                            <p class="footer-description">{t('footer.description')}</p>
                            <p class="footer-tech">{t('footer.deckerProject')}</p>
                        </div>
                                        <div class="footer-links">
                    <a href={getRelativeLocaleUrl(lang, 'about')} class="footer-link">{t('footer.about')}</a>
                    <a href={`/${lang}/privacy`} class="footer-link">{t('footer.privacyPolicy')}</a>
                    <a href={`/${lang}/changelog`} class="footer-link">{t('footer.changelog')}</a>
                    <a href="mailto:support@wigglypaint.com" class="footer-link">{t('footer.contact')}</a>
                    <a href="https://github.com/JohnEarnest/Decker" target="_blank" class="footer-link">{t('footer.github')}</a>
                </div>
                    </div>
                    <div class="footer-bottom">
                        <p class="footer-copyright">{t('footer.copyright')}</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</Layout>

<style>
.community-section {
    margin: 24px 0;
}

.ipad-banner-section {
    margin: 24px 0;
}

.ipad-banner-content {
    padding: 20px;
}

.ipad-banner-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
}

.ipad-banner-text {
    flex: 1;
}

.ipad-banner-subtitle {
    font-size: 18px;
    font-weight: normal;
    margin: 0 0 8px 0;
    color: #666;
}

.ipad-banner-text p {
    margin: 0;
    font-size: 14px;
    line-height: 1.4;
    color: #888;
}

.ipad-banner-cta {
    flex-shrink: 0;
}

.ipad-banner-screenshots {
    flex-shrink: 0;
    display: flex;
    align-items: center;
}

.ipad-screenshot-main {
    width: 200px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    transition: transform 0.3s ease;
}

.ipad-screenshot-main:hover {
    transform: scale(1.02);
}

.ipad-cta-btn {
    font-size: 14px !important;
    padding: 8px 16px !important;
    margin-top: 12px !important;
}

.ipad-cta-btn:hover {
    background: #333 !important;
}

.ipad-cta-btn:active {
    background: #111 !important;
}

.download-section {
    margin: 24px 0;
}

.download-content {
    padding: 30px;
}

.download-text {
    text-align: center;
    margin-bottom: 20px;
}

.download-text p {
    max-width: 700px;
    margin: 0 auto;
    font-size: 20px;
    font-weight: 500;
    line-height: 1.4;
    color: #333;
}

.platform-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin: 25px 0;
    flex-wrap: wrap;
}

.platform-btn {
    min-width: 160px;
    padding: 12px 20px;
    font-size: 16px;
    border-radius: 0 !important;
    border: 2px solid #c0c0c0 !important;
}

.ipad-highlight {
    background: #000 !important;
    color: white !important;
    border: 2px solid #000 !important;
}

.ipad-highlight:hover {
    background: #333 !important;
    border-color: #333 !important;
}

.ipad-highlight:active {
    background: #111 !important;
    border-color: #111 !important;
}

.ipad-highlight small {
    display: block;
    font-size: 12px;
    opacity: 0.9;
    margin-top: 3px;
    font-weight: normal;
}

@media (max-width: 768px) {
    .platform-buttons {
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }
    
    .platform-btn {
        width: 220px;
    }
}
</style>