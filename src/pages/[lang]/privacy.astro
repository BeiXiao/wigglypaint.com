        }

        .contact-box {
            background-color: #f8f8f8;
            border: 1px solid #808080;
            padding: 15px;
            margin: 15px 0;
            font-size: 12px;
        }

        .date-info {
            text-align: center;
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px solid #808080;
