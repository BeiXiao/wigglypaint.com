---
import Layout from '../layouts/Layout.astro';
import CommunityGrid from '../components/CommunityGrid.astro';
import Navigation from '../components/Navigation.astro';
import AnnouncementBanner from '../components/AnnouncementBanner.astro';
import { SocialShare } from 'astro-social-share';
import { useTranslations } from '../i18n/utils';
import galleryIndex from '../data/gallery-index.json';

// 英文版本首页 (默认语言)
const lang = 'en';
const t = useTranslations(lang);

// SEO 数据 - 优化长度和关键词密度
const title = 'WigglyPaint - Free Animated Drawing Tool | Create Pixel Art & GIFs';
const description = 'Create amazing animated drawings with wiggly lines! Free online tool for pixel art, comics & GIFs. No signup required.';

// 精选社区作品数据
const featuredCommunityData = galleryIndex.data.items;
---

<Layout title={title} description={description} lang={lang}>
    <Navigation lang={lang} currentPage="home" />
    <AnnouncementBanner lang={lang} />

    <div class="main-container">
        <!-- Hero & Demo Section -->
        <div id="hero" class="hero-section">
            <div class="window">
                <div class="title-bar">
                    <button aria-label="Close" class="close"></button>
                    <h1 class="title">{t('hero.title')}</h1>
                    <button aria-label="Resize" class="resize"></button>
                </div>
                <div class="separator"></div>
                <div class="window-pane">
                    <div class="hero-demo-container">
                        <!-- Hero Content -->
                        <div class="hero-content">
                            <p class="hero-subtitle">{t('hero.subtitle')}</p>
                            <p>Draw with animated brushes and create GIFs instantly!</p>
                        </div>

                        <!-- Demo Content -->
                        <div id="demo" class="demo-content">
                            <iframe id="demo-iframe" src="/wiggly.html" class="demo-iframe"
                                title="WigglyPaint Online"></iframe>
                        </div>

                        <!-- Social Share inside Hero -->
                        <div class="hero-social-share">
                            <div class="hero-share-content">
                                <p style="text-align: center; margin-bottom: 8px; font-size: 13px; color: #666;">{t('hero.socialShare')}</p>
                                <div style="text-align: center;">
                                    <SocialShare
                                        description={description}
                                        title={title}
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Download Section -->
        <div id="download" class="download-section">
            <div class="window">
                <div class="title-bar">
                    <h2 class="title">{t('download.title')}</h2>
                </div>
                <div class="separator"></div>
                <div class="window-pane download-content">
                    <div class="download-text">
                        <p>{t('download.description')}</p>
                    </div>
                    <div class="platform-buttons">
                        <button class="btn platform-btn ipad-highlight" onclick="window.open('https://apps.apple.com/us/app/wigglypaint/id6747758024', '_blank')">
                            <span>{t('download.ipad')}</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div id="features" class="features-grid">
            <div class="window feature-window">
                <div class="title-bar">
                    <h2 class="title">{t('feature.whatIs.title')}</h2>
                </div>
                <div class="separator"></div>
                <div class="window-pane feature-content">
                    <p>{t('feature.whatIs.content')}</p>
                </div>
            </div>

            <div class="window feature-window">
                <div class="title-bar">
                    <h2 class="title">{t('feature.howTo.title')}</h2>
                </div>
                <div class="separator"></div>
                <div class="window-pane feature-content">
                    <p>{t('feature.howTo.content')}</p>
                </div>
            </div>

            <div class="window feature-window">
                <div class="title-bar">
                    <h2 class="title">{t('feature.why.title')}</h2>
                </div>
                <div class="separator"></div>
                <div class="window-pane feature-content">
                    <p>{t('feature.why.content')}</p>
                </div>
            </div>

            <div class="window feature-window">
                <div class="title-bar">
                    <h2 class="title">{t('feature.privacy.title')}</h2>
                </div>
                <div class="separator"></div>
                <div class="window-pane feature-content">
                    <p>{t('feature.privacy.content')}</p>
                </div>
            </div>
        </div>

        <!-- Community Preview Section -->
        <div id="community-preview" class="community-section">
            <div class="window">
                <div class="title-bar">
                    <h2 class="title">{t('community.heading')}</h2>
                </div>
                <div class="separator"></div>
                <div class="window-pane" style="padding: 30px;">
                    <p style="text-align: center; margin-bottom: 20px;">{t('community.subtitle')}</p>
                    <CommunityGrid items={featuredCommunityData} page={1} pageSize={3} showPagination={false} />
                    <div style="text-align: center; margin-top: 20px;">
                        <a href="/community" class="btn">
                            {t('community.viewAll')} →
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- FAQ Section -->
        <div id="faq" class="faq-section">
            <div class="window">
                <div class="title-bar">
                    <h2 class="title">{t('faq.title')}</h2>
                </div>
                <div class="separator"></div>
                <div class="window-pane" style="padding: 30px;">
                    <div class="faq-item">
                        <h3 class="faq-question">{t('faq.q1')}</h3>
                        <div class="faq-answer">{t('faq.a1')}</div>
                    </div>

                    <div class="faq-item">
                        <h3 class="faq-question">{t('faq.q2')}</h3>
                        <div class="faq-answer">{t('faq.a2')}</div>
                    </div>

                    <div class="faq-item">
                        <h3 class="faq-question">{t('faq.q3')}</h3>
                        <div class="faq-answer">{t('faq.a3')}</div>
                    </div>

                    <div class="faq-item">
                        <h3 class="faq-question">{t('faq.q4')}</h3>
                        <div class="faq-answer">{t('faq.a4')}</div>
                    </div>

                    <div class="faq-item">
                        <h3 class="faq-question">{t('faq.q5')}</h3>
                        <div class="faq-answer">{t('faq.a5')}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer-section">
            <div class="window">
                <div class="title-bar">
                    <h2 class="title">{t('footer.title')}</h2>
                </div>
                <div class="separator"></div>
                <div class="window-pane footer-content">
                    <div class="footer-main">
                        <div class="footer-info">
                            <p class="footer-description">{t('footer.description')}</p>
                            <p class="footer-tech">{t('footer.deckerProject')}</p>
                        </div>
                        <div class="footer-links">
                            <a href="/about" class="footer-link">{t('footer.about')}</a>
                            <a href="/privacy" class="footer-link">{t('footer.privacyPolicy')}</a>
                            <a href="/changelog" class="footer-link">{t('footer.changelog')}</a>
                            <a href="mailto:support@wigglypaint.com" class="footer-link">{t('footer.contact')}</a>
                            <a href="https://github.com/JohnEarnest/Decker" target="_blank" class="footer-link">{t('footer.github')}</a>
                        </div>
                    </div>
                    <div class="footer-bottom">
                        <p class="footer-copyright">{t('footer.copyright')}</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</Layout>

<style>
/* Hero内部社交分享样式 */
.hero-social-share {
    margin-top: 10px;
}

.hero-share-content {
    padding: 0;
}

.community-section {
    margin: 24px 0;
}

.ipad-banner-section {
    margin: 24px 0;
}

.ipad-banner-content {
    padding: 20px;
}

.ipad-banner-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
}

.ipad-banner-text {
    flex: 1;
}

.ipad-banner-subtitle {
    font-size: 18px;
    font-weight: normal;
    margin: 0 0 8px 0;
    color: #666;
}

.ipad-banner-text p {
    margin: 0;
    font-size: 14px;
    line-height: 1.4;
    color: #888;
}

.ipad-banner-screenshots {
    flex-shrink: 0;
    display: flex;
    align-items: center;
}

.ipad-screenshot-main {
    width: 200px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    transition: transform 0.3s ease;
}

.ipad-screenshot-main:hover {
    transform: scale(1.02);
}

.ipad-cta-btn {
    font-size: 14px !important;
    padding: 8px 16px !important;
    margin-top: 12px !important;
}

.ipad-cta-btn:hover {
    background: #333 !important;
}

.ipad-cta-btn:active {
    background: #111 !important;
}

.download-section {
    margin: 24px 0;
}

.download-content {
    padding: 40px 30px;
}

.download-text {
    text-align: center;
    margin-bottom: 20px;
}

.download-text p {
    max-width: 700px;
    margin: 0 auto;
    font-size: 20px;
    font-weight: 500;
    line-height: 1.4;
    color: #333;
}

.platform-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin: 25px 0;
    flex-wrap: wrap;
}

.platform-btn {
    min-width: 160px;
    padding: 12px 20px;
    font-size: 16px;
    border-radius: 0 !important;
    border: 2px solid #c0c0c0 !important;
}

.ipad-highlight {
    background: #000 !important;
    color: white !important;
    border: 2px solid #000 !important;
}

.ipad-highlight:hover {
    background: #333 !important;
    border-color: #333 !important;
}

.ipad-highlight:active {
    background: #111 !important;
    border-color: #111 !important;
}

.ipad-highlight small {
    display: block;
    font-size: 12px;
    opacity: 0.9;
    margin-top: 3px;
    font-weight: normal;
}

@media (max-width: 768px) {
    .platform-buttons {
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }
    
    .platform-btn {
        width: 220px;
    }
}

/* FAQ styling */
.faq-question {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin: 0 0 10px 0;
    cursor: pointer;
}

.faq-answer {
    color: #666;
    line-height: 1.5;
    margin-bottom: 20px;
}

.faq-item {
    margin-bottom: 20px;
    border-bottom: 1px solid #eee;
    padding-bottom: 15px;
}

.faq-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
}
</style> 